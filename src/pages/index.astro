---
import Layout from '../layouts/Layout.astro';
import SectionA	from '../components/Astro/SectionA.astro'
import SectionB	from '../components/Astro/SectionB.astro'
import SectionC	from '../components/Astro/SectionC.astro'
import SectionD	from '../components/Astro/SectionD.astro'
---

<Layout title="Portafolio">
	<main>
		<SectionA />
		<SectionB />
		<SectionC />
		<SectionD />

	</main>
</Layout>



<style>
	main {
		display: grid;
		grid-template-areas:
		"a a b"
		"c d d";
		min-height: 98vh;
		gap: 2rem;
	}
	@media screen and (width < 700px) {
		main {
			grid-template-areas:
				"a"
				"b"
				"c"
				"d";

		}
	}
	@media screen and (width > 701px) {
		main {
			grid-template-areas:
				"a a b"
				"c d d";
		}
	}

	.section-b {
		grid-area: b;
	}
	.section-c {
		grid-area: c;
	}
	.section-d {
		grid-area: d;
	}

</style>




























