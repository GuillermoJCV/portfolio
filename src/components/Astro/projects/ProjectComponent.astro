---
interface Props {
	title: string;
	imgUrl: string;
}

const { title, imgUrl } = Astro.props;
---

<div>
	<a href="https://roscals.web.app" target="__blank">
		<figure>
			<img src={imgUrl} alt={title}/>
			<figcaption>
				{title}
			</figcaption>
		</figure>
	</a>
	<slot name="description"/>
	<slot name="skills">
</div>

<style>
	div {
		display: flex;
		gap: 1rem;
		background-color: var(--third-color);
		border-radius: 1rem;
		min-height: 20rem;
		overflow: hidden;
		width: 100%;
	}
	figure {
		overflow: hidden;
	}
	img {
		border-radius: 1rem;
		height: 20rem;
		aspect-ratio: 1112/775;
		scale: 1;
		transition: scale 500ms;
	}
	img:hover {
		scale: 1.3;
	}
</style>