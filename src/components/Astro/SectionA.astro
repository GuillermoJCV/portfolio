<style>
	@media screen and (width < 700px) {
		:root {	
			--section-direction: column;
		}
	}
	@media screen and (width > 701px) {
		:root {
			--section-direction: row;
		}
	}
	section {
		display: flex;
		flex-direction: var(--section-direction);
		align-items: center;
		gap: 2rem;
		padding: 1rem;
	}

	figure {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;
	}
	img[alt=face] {
		aspect-ratio: 1/1;
		border-radius: 50%;
		width: clamp(5rem, 20vw, 20rem);
	}
	figcaption {
		font-family: Kode Mono;
		white-space: nowrap;
		border-right: 2px solid #111;
		width: 23.5ch;

		animation: escribir 2s steps(23), parpadeo 500ms infinite step-end alternate;
		overflow: hidden;
	}
	@keyframes escribir {
		from { 
			width: 0; 
		}
	}
	@keyframes parpadeo {
		50% { 
